.orderbox {
  margin-top: 90rpx;
}
.hidden {
  background: #ebe9d6ea;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid gray;
  display: flex;
  align-items: center;
  position: relative;
}
.hidden text:nth-child(1),
.hidden text:nth-child(2) {
  margin-left: 20rpx;
}
.hidden text:nth-child(3) {
  position: absolute;
  right: 60rpx;
}
.hidden text:nth-child(4) {
  position: absolute;
  right: 10rpx;
  width: 32rpx;
  height: 32rpx;
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
  background-position: center center;
}
.title {
  width: 100%;
  display: flex;
}
.title text {
  flex: 1;
  text-align: center;
}
.orderDetail,
.total {
  width: 750rpx;
  padding: 10rpx 0 16rpx;
}
.orderDetail text,
.total text {
  display: inline-block;
}
.orderDetail text:first-child,
.total text:first-child {
  width: 25%;
  text-align: left;
}
.orderDetail text:not(:first-child),
.total text:not(:first-child) {
  width: 25%;
  text-align: center;
}
